<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginTop="10dp">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:background="@drawable/brakobrazka"
                    android:id="@+id/photo"
                    android:scaleType="centerCrop"

                    tools:layout_editor_absoluteY="0dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:id="@+id/title"
                    tools:text="tekst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_below="@+id/photo" android:layout_marginTop="11dp"/>
            <TextView
                    android:id="@+id/detailRow"
                    tools:text="27-11-2018"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:layout_below="@+id/title"
    />
            <TextView
                    tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/text"

                    android:layout_margin="20dp"
                    android:textColor="#000000"
                    android:layout_below="@+id/detailRow"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>